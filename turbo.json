{
    "$schema": "https://turborepo.org/schema.json",
    "tasks": {
      "build": {
        "dependsOn": ["^build"],
        "outputs": ["dist/**", "umd/**", "build/**", ".next/**"]
      },
      "test": {
        "dependsOn": ["^build"],
        "inputs": ["src/**/*.ts", "src/**/*.tsx", "test/**/*.ts"]
      },
      "lint": {},
      "type-check": {},
      "dev": {
        "cache": false,
        "persistent": true
      },
      "clean": {
        "cache": false
      }
    }
}