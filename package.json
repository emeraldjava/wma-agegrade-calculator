{
  "name": "wma-agegrade",
  "private": true,
  "description": "A set of node libraries to support wma agegrade calculator",
  "version": "2025.04.16",
  "author": "emeraldjava",
  "homepage": "",
  "scripts": {
    "build": "pnpm -r run build",
    "build:docs": "pnpm -r run build --filter=@wma-agegrade/docs",
    "build:all": "turbo run build",
    "dev": "pnpm build --watch",
    "lint": "pnpm --filter '@wma*/*' lint",
    "format": "pnpm --filter '@wma*/*' format",
    "build:clean": "turbo run clean:build",
    "cleandep": "rm -rf node_modules && pnpm -r exec rm -rf node_modules",
    "clean": "rm -rf node_modules && pnpm --filter '@wma*/*' clean",
    "preinstall": "npx only-allow pnpm"
  },
  "engines": {
    "node": "^23"
  },
  "packageManager": "pnpm@8.15.5",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "@tsconfig/node-lts-strictest": "^18.12.1",
    "eslint": "9.24.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.1",
    "ts-jest": "^29.2.5",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "turbo": "^2.5.0"
  },
  "dependencies": {
    "@jest/globals": "^29.7.0"
  }
}
